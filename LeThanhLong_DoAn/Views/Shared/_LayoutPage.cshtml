</head>
<body>
    <div class="container">
        <div class="container-fluid header">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/img/logo.png" style="height:80px; width:150px" />
                </div>
                <div class="col-md-6">
                    <form class="d-flex search" action="/sanpham/index">
                        <input class="form-control me-2" type="search"
                               placeholder="Search" aria-label="Search" name="search" id="search" value="@ViewBag.searchs">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
                <div class="col-md-3" style="margin-top: 20px">
                    @*@if (User.Identity.IsAuthenticated)
                    {
                        <div style="color: blue; font-weight:bold">
                            Hello @User.Identity.Name
                        </div>
                    }*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">                          
                            <a href="/account/logout" style="text-decoration: none; color: black;
                                 line-height: 40px; font-weight: bold">Đăng xuất</a>
                        </div>
                    </div>                 
                    }
                    else
                    {
                        <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            <a href="/account/register" style="text-decoration: none; color: black;
                                 line-height:40px; font-weight:bold">Đăng ký |</a>
                            <a href="/account/login" style="text-decoration: none; color: black;
                                 line-height: 40px; font-weight: bold">Đăng nhập</a>
                        </div>
                    </div>   
                    }
                                  
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="background-color: #003333">
        <div class="container">
            <div class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" href="/home" style="color:white;">TRANG CHỦ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/sanpham/index" style="color:white;">SẢN PHẨM</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="https://zalo.me/0933026960" style="color:white;">LIÊN HỆ</a>
                            </li>                           
                        </ul>
                        <a href="#" style="color:white;"><i class="fa-solid fa-cart-shopping" style="font-size:25px; margin-right:30px"></i></a>                
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>   
    <div>
        @RenderSection("Main", required: false)
    </div>    
    <div class="footer" style="border-top:3px solid; background-color: black">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
